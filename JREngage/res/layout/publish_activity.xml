<?xml version="1.0" encoding="utf-8"?>

<!--
   - Layout for JRPublishActivity
  -->
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <!--<include layout="@layout/shared_header" />-->

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >

            <RelativeLayout
                android:id="@+id/tab_view_content"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="5dp"
                >

                <EditText
                    android:id="@+id/edit_comment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:layout_marginRight="4dip"
                    android:layout_marginLeft="4dip"
                    android:gravity="top|left"
                    android:lines="3"
                    />

                <TextView
                    android:id="@+id/character_count_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/edit_comment"
                    android:singleLine="true"
                    android:textColor="#ff333333"
                    android:text="@string/calculating_remaining_characters"
                    android:layout_marginRight="4dip"
                    android:layout_marginLeft="4dip"
                    android:layout_marginBottom="5dip"
                    android:textSize="10dip"
                    />

                <RelativeLayout
                    android:id="@+id/preview_box"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/character_count_view"
                    android:background="@drawable/bg_publish_preview"
                    android:paddingBottom="4dip"
                    >
                    <!--android:gravity="top|left"-->
                    
                    <RelativeLayout
                        android:id="@+id/preview_box_border"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/bg_publish_preview_border"
                        android:layout_marginTop="8dip"
                        android:layout_marginRight="4dip"
                        android:layout_marginBottom="4dip"
                        android:layout_marginLeft="4dip"
                        >
                        <!--android:gravity="top|left"-->

                        <TextView
                            android:id="@+id/preview_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:bufferType="spannable"
                            android:layout_marginTop="2dip"
                            android:layout_marginLeft="4dip"
                            android:layout_marginBottom="2dip"
                            android:layout_marginRight="4dip"
                            android:textSize="12dip"
                            />
                            <!--android:layout_below="@id/character_count_view"-->
                            <!--android:singleLine="true"-->

                        <RelativeLayout
                            android:id="@+id/media_content_view"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/preview_text_view"
                            android:layout_marginTop="4dip"
                            android:layout_marginLeft="4dip"
                            android:layout_marginBottom="4dip"
                            android:layout_marginRight="4dip"
                            android:background="@drawable/bg_provider_activity_info"
                            >
                            <!--android:layout_height="122dip"-->
                            <!--android:layout_marginTop="10dip"-->
                            <!--android:layout_marginRight="7dip"-->
                            <!--android:layout_marginLeft="7dip"-->
                            <!--android:padding="5dp"-->
                            <!--android:gravity="top|left|bottom|right"-->
                            
                            <ImageView
                                android:id="@+id/media_content_image"
                                android:layout_width="60dip"
                                android:layout_height="60dip"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_margin="5dip"
                                android:src="@drawable/media60x60"
                                />

                            <TextView
                                android:id="@+id/media_content_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dip"
                                android:layout_marginRight="5dip"
                                android:layout_marginBottom="1dip"
                                android:layout_marginLeft="5dip"
                                android:layout_alignParentTop="true"
                                android:layout_toRightOf="@id/media_content_image"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:textStyle="bold"
                                />

                            <!--
                               - NOTE:  In order to get the text to extend more than two lines, had to use the 'inputType=...'
                               -        property.  Unfortunately, doing so breaks the ellipsize function.  Android BUG.
                              -->
                            <TextView
                                android:id="@+id/media_content_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dip"
                                android:layout_marginRight="5dip"
                                android:layout_marginBottom="0dip"
                                android:layout_marginLeft="5dip"
                                android:layout_below="@id/media_content_title"
                                android:layout_toRightOf="@id/media_content_image"
                                android:ellipsize="end"
                                android:textStyle="normal"
                                android:maxLines="4"
                                android:inputType="textMultiLine"
                                />
                                <!--android:maxHeight="150dip"-->

                        </RelativeLayout>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/preview_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="8dip"
                        android:singleLine="true"
                        android:text="@string/preview"
                        android:textColor="#ff666666"
                        android:background="#ffeeeeee"
                        android:textStyle="normal"
                        android:paddingLeft="4dip"
                        android:paddingRight="6dip"
                        android:textSize="10dip"
                        />
                        <!--android:layout_marginBottom="10dip"-->
                        
                </RelativeLayout>

                <TextView
                    android:id="@+id/powered_by_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_above="@+id/share_button_container"
                    android:layout_marginLeft="7dip"
                    android:layout_marginBottom="10dip"
                    android:singleLine="true"
                    android:text="@string/powered_by"
                    android:textColor="#ffdedede"
                    android:textStyle="normal"
                    android:paddingRight="6dip"
                    />

                <ImageView
                    android:id="@+id/provider_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_above="@+id/share_button_container"
                    android:layout_marginRight="7dip"
                    android:layout_marginBottom="10dip"
                    android:src="@drawable/icon_facebook_30x30"
                    />

                <LinearLayout
                    android:id="@+id/share_button_container"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="top|center_horizontal"
                    android:paddingTop="0dip"
                    android:background="#33074764"
                    >
                    <!-- android:paddingBottom="22dip" -->

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/triangle_icon"
                        />

                    <LinearLayout
                        android:id="@+id/profile_pic_and_buttons_horizontal_layout"
                        android:orientation="horizontal"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent"
                        android:gravity="center_horizontal|center_vertical"
                        >
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_alignParentBottom="true"-->
                        <!--android:gravity="top|center_horizontal"-->

                        <ImageView
                            android:id="@+id/profile_pic"
                            android:src="@drawable/profilepic_placeholder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:maxHeight="45dip"
                            android:maxWidth="45dip"
                            android:minHeight="45dip"
                            android:minWidth="45dip"
                            android:scaleType="centerCrop"
                            android:visibility="gone"
                            />

                        <LinearLayout
                            android:id="@+id/name_and_sign_out_container"
                            android:orientation="vertical"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:visibility="gone"
                            >
                            <!--android:layout_width="130dip"-->
                            <!--android:paddingTop="0dip"-->
                            <!--android:background="#330000ff"-->
                            <!--android:layout_width="fill_parent"-->
                            <!--android:layout_alignParentBottom="true"-->
                            <!--android:gravity="top|center_horizontal"-->

                            <TextView
                                android:id="@+id/user_name"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:singleLine="true"
                                />
                            <!--android:textStyle="normal"-->
                            <!--android:textColor="#ffdedede"-->
                            <!--android:layout_marginLeft="7dip"-->
                            <!--android:layout_marginBottom="10dip"-->
                            <!--android:paddingRight="6dip"-->

                            <Button
                                android:id="@+id/sign_out_button"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="Sign Out"
                                />
                            <!--android:textSize="8dip"-->
                            <!--android:textColor="#ffffffff"-->
                            <!--android:textStyle="bold"-->
                            <!--android:gravity="center_horizontal|center_vertical"-->

                        </LinearLayout>

                        <Button
                            android:id="@+id/just_share_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="Share"
                            android:textSize="20dip"
                            android:textStyle="bold"
                            android:visibility="gone"
                            android:background="@drawable/sel_janrain_135x40"
                            />
                        <!--android:textColor="#ffffffff"-->

                        <LinearLayout
                            android:id="@+id/shared_text_and_check_mark_horizontal_layout"
                            android:orientation="horizontal"
                            android:layout_height="fill_parent"
                            android:layout_width="fill_parent"
                            android:gravity="center_horizontal|center_vertical"
                            android:visibility="gone"
                            >

                            <TextView
                                android:id="@+id/shared"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:singleLine="true"
                                android:text="@string/shared"
                                />

                            <ImageView
                                android:id="@+id/check_mark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/check_mark"
                                />

                        </LinearLayout>

                        <Button
                            android:id="@+id/connect_and_share_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="Connect and Share"
                            android:textSize="20dip"
                            android:textStyle="bold"
                            android:background="@drawable/sel_janrain_280x40"
                            />
                        <!--android:textColor="#ffffffff"-->
                        <!--android:layout_marginTop="4dp"-->
                        <!--android:layout_marginRight="4dp"-->
                        <!--android:layout_marginBottom="4dp"-->
                        <!--android:layout_marginLeft="4dp"-->

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>>

        </FrameLayout>

    </LinearLayout>

</TabHost>