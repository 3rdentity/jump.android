<?xml version="1.0" encoding="utf-8"?>

<!--
   - Layout for JRPublishActivity
  -->
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <include layout="@layout/shared_header" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >

            <RelativeLayout
                android:id="@+id/tab_view_content"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="5dp"
                >

                <EditText
                    android:id="@+id/edit_comment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:layout_marginRight="7dip"
                    android:layout_marginLeft="7dip"
                    android:gravity="top|left"
                    android:lines="4"
                    />

                <TextView
                    android:id="@+id/character_count_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/edit_comment"
                    android:singleLine="true"
                    android:textColor="#ff333333"
                    android:text="@string/calculating_remaining_characters"
                    />


                <TextView
                    android:id="@+id/preview_label_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/character_count_view"
                    />
                <!--android:singleLine="true"-->

                <RelativeLayout
                    android:id="@+id/media_content_view"
                    android:layout_width="fill_parent"
                    android:layout_height="122dip"
                    android:layout_below="@id/preview_label_view"
                    android:gravity="top|left"
                    android:background="@drawable/bg_provider_activity_info"
                    >
                    <!--android:layout_marginTop="10dip"-->
                    <!--android:layout_marginRight="7dip"-->
                    <!--android:layout_marginLeft="7dip"-->
                    <!--android:padding="5dp"-->

                    <ImageView
                        android:id="@+id/media_content_image"
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="5dip"
                        android:src="@drawable/media60x60"
                        />

                    <TextView
                        android:id="@+id/media_content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dip"
                        android:layout_marginRight="5dip"
                        android:layout_marginBottom="1dip"
                        android:layout_marginLeft="5dip"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/media_content_image"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textStyle="bold"
                        />

                    <!--
                       - NOTE:  In order to get the text to extend more than two lines, had to use the 'inputType=...'
                       -        property.  Unfortunately, doing so breaks the ellipsize function.  Android BUG.
                      -->
                    <TextView
                        android:id="@+id/media_content_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dip"
                        android:layout_marginRight="5dip"
                        android:layout_marginBottom="0dip"
                        android:layout_marginLeft="5dip"
                        android:layout_below="@id/media_content_title"
                        android:layout_toRightOf="@id/media_content_image"
                        android:inputType="textMultiLine"
                        android:ellipsize="end"
                        android:textStyle="normal"
                        />

                </RelativeLayout>

                <TextView
                    android:id="@+id/powered_by_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_above="@+id/share_button_container"
                    android:layout_marginLeft="7dip"
                    android:layout_marginBottom="10dip"
                    android:singleLine="true"
                    android:text="@string/powered_by"
                    android:textColor="#ffdedede"
                    android:textStyle="normal"
                    android:paddingRight="6dip"
                    />

                <ImageView
                    android:id="@+id/provider_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_above="@+id/share_button_container"
                    android:layout_marginRight="7dip"
                    android:layout_marginBottom="10dip"
                    android:src="@drawable/icon_facebook_30x30"
                    />

                <LinearLayout
                    android:id="@+id/share_button_container"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="top|center_horizontal"
                    android:paddingTop="0dip"
                    android:background="#333b5999"
                    >
                    <!-- android:paddingBottom="22dip" -->

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/triangle_icon"
                        />

                    <LinearLayout
                        android:id="@+id/profile_pic_and_buttons_horizontal_layout"
                        android:orientation="horizontal"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent"
                        android:gravity="center_horizontal|center_vertical"
                        >
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_alignParentBottom="true"-->
                        <!--android:gravity="top|center_horizontal"-->

                        <ImageView
                            android:id="@+id/profile_pic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon"
                            android:visibility="gone"
                            />

                        <LinearLayout
                            android:id="@+id/name_and_sign_out_container"
                            android:orientation="vertical"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:visibility="gone"
                            >
                            <!--android:layout_width="130dip"-->
                            <!--android:paddingTop="0dip"-->
                            <!--android:background="#330000ff"-->
                            <!--android:layout_width="fill_parent"-->
                            <!--android:layout_alignParentBottom="true"-->
                            <!--android:gravity="top|center_horizontal"-->

                            <TextView
                                android:id="@+id/user_name"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:singleLine="true"
                                />
                            <!--android:textStyle="normal"-->
                            <!--android:textColor="#ffdedede"-->
                            <!--android:layout_marginLeft="7dip"-->
                            <!--android:layout_marginBottom="10dip"-->
                            <!--android:paddingRight="6dip"-->

                            <Button
                                android:id="@+id/sign_out_button"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="Sign Out"
                                />
                            <!--android:textSize="8dip"-->
                            <!--android:textColor="#ffffffff"-->
                            <!--android:textStyle="bold"-->
                            <!--android:gravity="center_horizontal|center_vertical"-->

                        </LinearLayout>

                        <Button
                            android:id="@+id/just_share_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="Share"
                            android:textSize="20dip"
                            android:textStyle="bold"
                            android:visibility="gone"
                            />
                        <!--android:textColor="#ffffffff"-->
                        <!--android:background="@drawable/sel_iosblue_135x40"-->

                        <Button
                            android:id="@+id/connect_and_share_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center_horizontal|center_vertical"
                            android:text="Connect and Share"
                            android:textSize="20dip"
                            android:textStyle="bold"
                            />
                        <!--android:textColor="#ffffffff"-->
                        <!--android:background="@drawable/sel_iosblue_280x40"-->
                        <!--android:layout_marginTop="4dp"-->
                        <!--android:layout_marginRight="4dp"-->
                        <!--android:layout_marginBottom="4dp"-->
                        <!--android:layout_marginLeft="4dp"-->

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>>

        </FrameLayout>

    </LinearLayout>

</TabHost>