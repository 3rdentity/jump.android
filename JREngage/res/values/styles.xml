<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- {Selects between Theme.Dialog, and Theme.Holo.Light.Dialog} -->
    <style name="jr_dialog" parent="@android:style/Theme.Dialog"/>

    <!-- {Selects between Theme.Light and Theme.Holo.Light} -->
    <style name="jr_fullscreen" parent="android:style/Theme.Light" />

    <!-- TOO fix doc comment-->
    <!-- {Selects between Theme.Light.NoTitleBar and Theme.Holo.Light.NoActionBar} -->
    <!--<style name="jr_fullscreen_no_title" parent="@android:style/Theme.Light.NoTitleBar" />-->
    <style name="jr_fullscreen_no_title" parent="jr_fullscreen"/>

    <!-- Dark versions of the above -->
    <style name="jr_dialog_dark" parent="@android:style/Theme.Dialog"/>
    <style name="jr_fullscreen_dark" parent="android:style/Theme"/>
    <style name="jr_fullscreen_no_title_dark" parent="jr_fullscreen_dark"/>

    <style name="jr_about_dialog_text">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="jr_dialog_base">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

</resources>
