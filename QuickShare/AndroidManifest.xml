<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.janrain.android.quickshare"
      android:versionCode="010105"
      android:versionName="2.0.0">

    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="12"/>

    <application
        android:label="QuickShare"
        android:icon="@drawable/icon"
        android:theme="@style/JanrainDemoTheme"
        android:debuggable="true"
        >

        <activity android:name="MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".FeedSummaryActivity"
                  android:label="Janrain Blog Posts"
            />

        <activity android:name=".StoryDetailActivity"
                  android:label="Blog Post"
            />

        <!-- For Janrain Engage library -->
        <activity
            android:name="com.janrain.android.engage.ui.JRFragmentHostActivity"
            android:theme="@style/jr_dialog"
            android:configChanges="orientation"
            android:windowSoftInputMode="adjustResize|stateHidden"
            />

        <activity
            android:name="com.janrain.android.engage.ui.JRFragmentHostActivityFullscreen"
            android:configChanges="orientation"
            android:theme="@style/jr_fullscreen"
            android:windowSoftInputMode="adjustResize|stateHidden"
            />

        <activity
            android:name="com.janrain.android.engage.ui.JRFragmentHostActivityFullscreenNoTitleBar"
            android:configChanges="orientation"
            android:theme="@style/jr_fullscreen_no_title"
            android:windowSoftInputMode="adjustResize|stateHidden"
            />
    </application>
</manifest> 
