<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.janrain.android.quickshare"
      android:versionCode="010100"
      android:versionName="1.1.0">
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-sdk android:minSdkVersion="7" />

    <application android:label="QuickShare" android:icon="@drawable/icon" android:debuggable="true">
        <activity android:name="MainActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Light" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".FeedSummaryActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Light" />

        <activity android:name=".StoryDetailActivity"
                  android:theme="@android:style/Theme.Light"/>

        <activity android:name=".DeeperWebViewActivity"
                  android:theme="@android:style/Theme.Light"/>

        <!-- For Janrain Engage library -->
        <activity android:name="com.janrain.android.engage.ui.JRProvidersActivity"
                  android:theme="@android:style/Theme.Light"
                  android:configChanges="orientation"/>
        <activity android:name="com.janrain.android.engage.ui.JRLandingActivity"
                  android:theme="@android:style/Theme.Light"
                  android:configChanges="orientation"/>
        <activity android:name="com.janrain.android.engage.ui.JRWebViewActivity"
                  android:theme="@android:style/Theme.Light"
                  android:configChanges="orientation"/>
        <activity android:name="com.janrain.android.engage.ui.JRPublishActivity"
                  android:theme="@android:style/Theme.Light.NoTitleBar"
                  android:configChanges="orientation"/>

    </application>
</manifest> 
