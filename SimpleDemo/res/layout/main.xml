<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    >

    <Button
        android:id="@+id/btn_test_auth"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        android:text="@string/btn_auth_label"
        />

    <Button
        android:id="@+id/btn_test_pub"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        android:text="@string/btn_pub_label"
        />

    <EditText
        android:id="@+id/share_url"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:inputType="textUri"
        />

    <Button
        android:id="@+id/btn_test_specific_provider"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        android:text="Direct sign-in to Facebook"
        />

    <Button
        android:id="@+id/btn_main_activity"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        android:text="Launch a child Activity"
        android:onClick="launchChild"
        />

    <FrameLayout
            android:id="@id/jr_publish_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    <FrameLayout
            android:id="@id/jr_signin_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

</LinearLayout>

